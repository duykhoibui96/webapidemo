<div id="loading" style="position: fixed; right: 0; top: 0; z-index: 1000; display: none">
    <i class="fa fa-spin fa-spinner fa-3x"></i>
</div>
<div id="media-dialog" class="container-fluid">
    <div class="row" id="media-group">
    </div>
</div>
<div class="container" style="padding: 50px 200px">
    <div class="row">
        <div class="text-center">
            <img src="images/google.png" alt="google logo" style="width: 50%">
        </div>
        <form id="locationSearchForm">
            <div id="coordinateNotFound" class="alert alert-danger" style="display: none">
                Không tìm thấy tọa độ của khu vực hay địa điểm này
            </div>
            <div id="custom-search-input">
                <div class="input-group col-md-12">
                    <input type="text" class="form-control input-lg" id="location" placeholder="Nhập tên khu vực hoặc địa điểm để lấy tọa độ"
                    />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </form>
    </div>
    <div class="row">

        <div id="coordinateFound" class="table-responsive" style="display: none">
            <h3 style="font-weight: bold">DANH SÁCH CÁC TỌA ĐỘ TÌM ĐƯỢC</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Khu vực</th>
                        <th>Kinh độ</th>
                        <th>Vĩ độ</th>
                    </tr>
                </thead>
                <tbody id="coordinateGroup">
                </tbody>
            </table>
        </div>

        <div id="locationFound" class="table-responsive" style="display: none">
            <h3 style="font-weight: bold">DANH SÁCH CÁC ĐỊA ĐIỂM TÌM ĐƯỢC</h3>
            <h4>Khu vực
                <span id="selectedCoordinateName"></span>
            </h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Địa điểm</th>
                        <th>Kinh độ</th>
                        <th>Vĩ độ</th>
                    </tr>
                </thead>
                <tbody id="locationGroup">
                </tbody>
            </table>
        </div>

    </div>
</div>